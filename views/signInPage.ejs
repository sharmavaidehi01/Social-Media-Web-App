<link rel="stylesheet" href="./css/signIN.css">
<body>
    <div class="page-container">
        <div class="container">
        <form action="/users/create-session" method="post" class="signin-form">
            <h2>Sign In</h2>
            <input type="email" placeholder="Username" required name="email">
            <input type="password" placeholder="Password" required name="password">
            <button type="submit">Sign In</button>
        </form>
        <div class="forgot-password">
            <a href="/users/forgot-pass">Forgot Password?</a>
        </div>
        <div class="separator">or</div>
        <div class="social-signin">
            <p>Sign in with:</p>
            <a href="/users/auth/google" class="google">Google</a>
        </div>
        </div>
    </div>
  </body>